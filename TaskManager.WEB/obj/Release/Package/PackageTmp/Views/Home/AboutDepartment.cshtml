@model IEnumerable<TaskManager.WEB.Models.UserViewModel>
@using TaskManager.WEB.Infrastructure.Helpers
@{
    ViewBag.Title = "Детали";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@{
    ViewBag.Title = "Детали";
}
<div>
    <dl class="dl-horizontal">
        <dt>
            Отделение
        </dt>

        <dd>
            @ViewBag.DepName
        </dd>

    </dl>
    <h4>Сотрудники отделения</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Не найдено сотрудников</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @MyHelpers.ProfileImageLink(item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RealName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Account", new { id = item.Id })">
                            <i class="fas fa-folder">
                            </i>
                        </a>
                    </td>
                </tr>
            }
        }

    </table>
</div>
<p>
    @Html.ActionLink("Назад к списку", "Departments")
</p>
