@model IEnumerable<TaskManager.WEB.Areas.Admin.ViewModels.UserViewModel>
@using TaskManager.WEB.Infrastructure.Helpers

@{
    ViewBag.Title = "Список пользователей";
}
<p>
    <a class="btn btn-success btn-sm" href="@Url.Action("Create","User")">
        <i class="far fa-plus-square">
        </i>
        Добавить
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProfileImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="7" class="text-center" style="color:white">Не найдено пользователей</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @MyHelpers.ProfileImageLink(item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "User", new { id = item.Id })">
                        <i class="fas fa-folder">
                        </i>
                    </a>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit", "User", new { id = item.Id })">
                        <i class="fas fa-pencil-alt">
                        </i>
                    </a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "User", new { id = item.Id })">
                        <i class="fas fa-trash">
                        </i>
                    </a>
                </td>
            </tr>
        }
    }
</table>
